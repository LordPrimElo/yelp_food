<%- include("partials/header") %>


<div class="container">
	<h1>Edit Comment</h1>
	<form action="/foods/<%= food._id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
		
		<div class="form-group">
			<label for="text">Comment Text</label>
			<textarea class="form-control" name="text" id="id" rows=8 cols=80 placeholder="Text Here..." required autofocus><%= comment.text %></textarea>
		</div>
		
		<button type="submit" class="btn btn-info my-2">Submit!</button>
	</form>
</div>


<%- include("partials/footer") %>